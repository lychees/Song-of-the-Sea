<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                tools:context="org.easyrpg.player.settings.SettingsGamesFoldersActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/settings_add_game_folder_button"
        android:padding="10dp">
        <LinearLayout
            android:id="@+id/games_folders_list"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"/>
    </ScrollView>

    <Button
        android:id="@+id/settings_add_game_folder_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:text="@string/add_game_folder"
        android:textSize="20sp"/>

</RelativeLayout>